{
  "template" : "martinus_data*",
  "version" : 1,
  "settings": {
    "analysis": {
      "filter": {
        "lemmagen_filter_sk": {
          "type": "lemmagen",
          "lexicon": "sk"
        },
        "sk_SK" : {
          "type" : "hunspell",
          "locale" : "sk_SK",
          "dedup" : true,
          "recursion_level" : 0
        },
        "synonym_filter": {
          "type": "synonym",
          "synonyms_path": "synonyms/sk_SK.txt",
          "ignore_case": true
        },
        "stopwords_SK": {
          "type": "stop",
          "stopwords_path": "stop-words/stop-words-slovak.txt",
          "ignore_case": true
        }
      },
      "analyzer": {
        "slovencina_synonym": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "stopwords_SK",
            "lemmagen_filter_sk",
            "lowercase",
            "stopwords_SK",
            "synonym_filter",
            "asciifolding"
          ]
        },
        "slovencina": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "stopwords_SK",
            "lemmagen_filter_sk",
            "lowercase",
            "stopwords_SK",
            "asciifolding"
          ]
        }
      }
    }
  },
  "mappings": {
	  "doc": {
	    "properties": {
	      "@timestamp": { "type": "date" },
	      "@version": { "type": "text" },
	      "host": { "type": "text" },

	      "discount": { "type": "long" },
	      "id": { "type": "long" },
	      "image_url": { "type": "text" },
	      "isbn": { "type": "text" },
	      "language": { 
	      	"type": "text",
	        "analyzer": "slovencina",
	        "search_analyzer": "slovencina"
	      },
	      "normal_price": { "type": "float" },
	      "page_number": { "type": "long" },
	      "path": { "type": "text" },
	      "price": { "type": "float" },
	      "cat_number": { "type": "long" },
	      "url": { "type": "text" },
	      "weight": { "type": "long" },
	      "release_year": { "type": "long" },
	      "size": { "type": "text" },

	      "description": {
	        "type": "text",
	        "analyzer": "slovencina",
	        "search_analyzer": "slovencina",
	        "fields": {
	          "keyword": {
	            "type": "keyword"
	          }
	        }
	      },
	      "publisher": {
	        "type": "text",
	        "analyzer": "slovencina",
	        "search_analyzer": "slovencina",
	        "fields": {
	          "keyword": {
	            "type": "keyword",
	            "ignore_above": 256
	          }
	        }
	      },
	      "publishing_house": {
	        "type": "text",
	        "analyzer": "slovencina",
	        "search_analyzer": "slovencina",
	        "fields": {
	          "keyword": {
	            "type": "keyword",
	            "ignore_above": 256
	          }
	        }
	      },

	      "author": {
	        "type": "text",
	        "analyzer": "slovencina",
	        "search_analyzer": "slovencina",
	        "fields": {
	          "keyword": { "type": "keyword" }
	        }
	      },
	      "pledge": {
	        "type": "text",
	        "analyzer": "slovencina",
	        "search_analyzer": "slovencina",
	        "fields": {
	          "keyword": { "type": "keyword" }
	        }
	      },
	      "title": {
	        "type": "text",
	        "analyzer": "slovencina",
	        "search_analyzer": "slovencina",
	        "fields": {
	          "keyword": { "type": "keyword" }
	        }
	      },
	      "original_name": {
	        "type": "text",
	        "fields": {
	          "keyword": { "type": "keyword" }
	        }
	      }
	    }
	  }
	}
}